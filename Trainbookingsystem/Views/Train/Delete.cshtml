@model Trainbookingsystem.Models.Train

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Train Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>Name:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <strong>Photo:</strong>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Photo != null && Model.Photo.Length > 0)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" alt="@Model.Name" class="img-fluid" />
            }
            else
            {
                <p>No photo available</p>
            }
        </dd>
        <dt class="col-sm-2">
            <strong>Origin:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Origin)
        </dd>
        <dt class="col-sm-2">
            <strong>Destination:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            <strong>Schedule:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule)
        </dd>
        <dt class="col-sm-2">
            <strong>Available Seats:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableSeats)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TrainId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
