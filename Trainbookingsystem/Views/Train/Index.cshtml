@model IEnumerable<Trainbookingsystem.Models.Train>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mt-4 mb-3">Train List</h1>

<div class="container">
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Train Name</th>
                    <th scope="col">Photo</th>
                    <th scope="col">Origin</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Schedule</th>
                    <th scope="col">Available Seats</th>
                    <th scope="col">Price</th>
                    <th scope="col">AC</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            @if (item.Photo != null && item.Photo.Length > 0)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Photo)" alt="Train Photo" class="img-thumbnail" style="max-width: 100px;" />
                            }
                            else
                            {
                                <span>No photo available</span>
                            }
                        </td>

                        <td>@item.Origin</td>
                        <td>@item.Destination</td>
                        <td>@item.Schedule.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@item.AvailableSeats</td>
                        <td>@item.Price</td>
                        <td>@(item.IsAC ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.TrainId" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.TrainId" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.TrainId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
